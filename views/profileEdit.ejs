<body>
    <header class="main-header">
        <div class="header-layout">
            <span class="header-logo logo"><a href="/">Chatta</a></span>
            <ul class="header-menu">
                <li><a href="/">게시판 리스트</a></li>
            </ul>
            <div class="header-profie">
                <div class="profile" onclick="toggleHeaderProfile()">
                    <img src="<%= profileImage %>" alt="profile_image" />
                </div>
                <ul class="header-profile-tab">
                    <li id="mobileView"><a href="/">게시판 리스트</a> </li>
                    <li><a href="/profile">프로필</a> </li>
                    <li><button type="button" onclick="">로그아웃</button></li>
                </ul>
            </div>
        </div>
    </header>
    <!-- 중앙 사용자 정보 영역 -->
    <div class="user-info">
        <div class="a">
            <!-- 비밀번호 변경은 다른페이지로 분리 -->
            <a class="pwEdit" href="/profile/edit/pw">비밀번호 변경</a>
            <!-- 회원탈퇴도 다른페이지로 분리 -->
            <a class="destroy" href="/profile/edit/delete">회원 탈퇴</a>
        </div>
        <hr />

        <form name="edit-profile-image" enctype="multipart/form-data">
            <input type="hidden" id="id" value="<%= user.user_id %>">
            <!-- 상단 프로필 사진 영역 -->
            <div class="top-info">
                <label for="profileImage">
                    <img src="<%= profileImage %>" alt="프로필사진">
                </label>
                <br />
                <input type="file" id="profileImage" name="profileImage" accept="image/*">
            </div>
            <!-- 저장 버튼 -->
            <div class="btn">
                <div class="save_btn">
                    <button type="button" onclick="editProfileImage()">프로필 이미지 저장</button>
                </div>
            </div>
        </form>

        <form name="edit-profile">
            <input type="hidden" id="id" value="<%= user.user_id %>">
            <!-- 중앙 유저 정보 영역 -->
            <div class="center-info">
                <!-- 유저 정보 상단 영역 -->
                <div class="center-top-info">
                    <div class="info-set">
                        <label for="userName">이름</label>
                        <input type="text" id="userName" value="<%= user.user_name %>" readonly />
                    </div>
                    <div class="info-set">
                        <label for="loginId">아이디</label>
                        <input type="text" id="loginId" value="<%= user.login_id %>" readonly />
                    </div>
                    <div class="info-set">
                        <label for="gender">성별</label>
                        <input type="text" id="gender" value="<%= user.gender %>" readonly>
                    </div>
                    <div class="info-set">
                        <label for="nickName">닉네임</label>
                        <input type="text" id="nickName" value="<%= user.nickname %>">
                    </div>
                    <div class="info-set">
                        <label for="birth">생년월일</label>
                        <input type="text" id="birth" value="<%= user.birth %>" readonly>
                    </div>
                    <div class="info-set">
                        <label for="email">이메일</label>
                        <input type="email" id="email" value="<%= user.email %>">
                    </div>
                </div>
                <!-- 유저 정보 하단 영역 -->
                <div class="center-bottom-info">
                    <div class="info-cate">
                        <label for="categoryA">선호 카테고리</label>
                        <input type="text" id="categoryA">
                    </div>
                    <div class="info-cate">
                        <label for="categoryB">비선호 카테고리</label>
                        <input type="text" id="categoryB">
                    </div>
                </div>
            </div>
            <!-- 저장 버튼 -->
            <div class="btn">
                <div class="save_btn">
                    <button type="button" onclick="edit()">저장하기</button>
                </div>
                <div class="cancel_btn">
                    <button type="button" onclick="cancel()">뒤로가기</button>
                </div>
            </div>
        </form>
    </div>
    <footer class="footer-body">
